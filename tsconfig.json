{
    "compilerOptions": {
        "noEmit": true,
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": true,
        "baseUrl": "."
    },
    "include": ["src"]
}